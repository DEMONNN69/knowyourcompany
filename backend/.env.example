# Know Your Company - Backend Configuration
# Copy this file to .env and fill in actual values

# App Settings
DEBUG=False
APP_NAME="Know Your Company - Company Authenticity Checker"
APP_VERSION="0.1.0"

# Server
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Redis Cache (Upstash or local)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400

# Database - Choose one
# For Postgres:
DATABASE_URL=postgresql://user:password@localhost:5432/kyco

# For Firestore:
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=KnowYourCompany/0.1.0

# API Configuration
HTTP_TIMEOUT_SECONDS=10
MAX_CONCURRENT_REQUESTS=5
